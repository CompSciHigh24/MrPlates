      </div>
  </nav>
    <br>
    <svg id="fader">
  <center>
  <h1>Order Dashboard</h1>
   
    <a id="hover-underline-animation" style="font-size:25px !important; color:rgba(91, 192, 235, 1) !important; margin-right:20px !important" href="/menu/editMenu">Edit Items</a>

    <a id="hover-underline-animation" style="font-size:25px !important; color:rgba(91, 192, 235, 1) !important; margin-left:20px !important" href="/adminPage">Add Item</a>
  </center>
    <br>
    
    
  <!-- Loop that makes a card for every food item. Displays ther image, food name, and the allergens-->
  
  <div class="section">
   <% for(let i = 0; i < order.length; i++) { %>
     <div class="d-flex flex-row col-md-3" style="justify-content: center; margin-bottom:5%">
       
       <div class="a-box">
         <div class="img-container" >
           <div class="img-inner">
             <div class="inner-skew">
               <img src="https://www.freeiconspng.com/thumbs/profile-icon-png/profile-icon-9.png">
             </div>
           </div>
         </div>
         <div class="text-container">
           <% if((order[i].customerFName=== "") && (order[i].customerLName==="")){ %>
           <h3>Unknown Person</h3>
             <% }else{ %>
           <h3><%= order[i].customerFName +" "+ order[i].customerLName %></h3>
               <% } %>
           <div>
             <span style="font-weight:bold">Grade: </span> <%= order[i].grade %> 
               </div>
           <div>
           <span style="font-weight:bold">Advisory: </span> <%= order[i].advisory %> 
             </div>
           <div>
             <span style="font-weight:bold">Ordered: </span> <%= order[i].bill %> 
               </div>
           <br>
                 <button class='fulfilledOrder' data-id="<%= order[i]._id %>" id="rsvp" >Fulfilled Order?</button>
           <br>
           <br>
                 <div class="time">
             <span class="timestamp" style="color: #777;"><%= order[i].createdAt.toDateString() %> <%= order[i].createdAt.getHours() %>:<%= order[i].createdAt.getMinutes().toString().padStart(2, '0')%></span>
</div>

                
       </div>
     </div>
       </div>
     <% } %>
  </div>
   
       <br>
        <br>
        <br>
        <br>
     </svg>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
       <script src="/deleteOrder.js"></script>
        <script src="/pageFade.js" defer></script>
</body>
</html>